<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/iv_req_blood"
            android:src="@drawable/b_droop"
            android:layout_marginTop="5dp"/>
        <TextView

            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/tv_req_name"
            android:text="Username"
            android:gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <TextView

            android:id="@+id/tv_req_contact"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="80dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:text="03004205619"
            android:textSize="15sp"
            android:layout_below="@+id/tv_req_name"/>

        <TextView
            android:id="@+id/tv_req_city"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="10dp"
            android:text="City"
            android:gravity="center"
            android:textSize="15sp"
          />

        <TextView
            android:id="@+id/tv_req_type"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginLeft="250dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:text="Type"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_below="@+id/tv_req_city"
            />

</RelativeLayout>